<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="155dp"
    android:layout_height="48dp"
    android:background="@android:color/transparent"
    >

  <LinearLayout
      android:id="@+id/record_ani_layout"
      android:layout_width="155dp"
      android:layout_height="48dp"
      android:orientation="horizontal"
      android:background="@drawable/bg_record_start_animation"
      >

    <ImageView
        android:id="@+id/record_ani_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/pl_img_logo"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/record_ani_timer_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="6dp"
          android:layout_weight="1"
          android:gravity="bottom"
          android:maxLines="2"
          android:textSize="11dp"
          tools:text="Start recording"
          android:textColor="@android:color/black"
          />

      <TextView
          android:id="@+id/record_ani_copy_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="top"
          android:textSize="8dp"
          android:text="by PLUG"
          android:textColor="@android:color/darker_gray"

          />
    </LinearLayout>

  </LinearLayout>

</FrameLayout>