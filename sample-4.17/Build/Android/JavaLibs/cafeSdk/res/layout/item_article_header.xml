<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_item_margin"
    android:layout_marginTop="4dp"
    android:background="@color/white1"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/list_item_margin"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="115dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:focusable="true"
        android:clickable="true"
        tools:text="Menu"
        android:layout_alignParentLeft="true"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/share"
        android:layout_marginRight="5dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/pl_icon_translate_off"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/more_actions"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/pl_icon_share"/>

    <ImageView
        android:id="@+id/more_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/list_item_margin"
        android:paddingRight="@dimen/list_item_margin"
        android:src="@drawable/cf_icon_more_bg"/>
  </RelativeLayout>

  <TextView
      android:id="@+id/subject"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginRight="@dimen/list_item_margin"
      android:layout_marginBottom="10dp"
      android:textColor="@color/black2"
      android:textStyle="bold"
      android:textSize="23dp"/>

</LinearLayout>
